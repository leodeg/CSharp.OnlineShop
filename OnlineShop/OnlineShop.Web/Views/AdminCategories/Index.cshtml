@model IEnumerable<OnlineShop.Data.Models.Category>

@{
	ViewData["Title"] = "Categories Table";
}

<h1 class="text-center">Categories Table</h1>
<hr />

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null && Model.Any())
		{
			@foreach (var item in Model)
			{
				<tr>
					<td>
						<a asp-controller="AdminSubcategories" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-link">@item.Title</a>
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
