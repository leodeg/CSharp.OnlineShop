@model OnlineShop.Web.Models.ViewModels.SubcategoriesIndexVM

@{
	ViewData["Title"] = "Index";
}

<h1 class="text-center">Subcategories Table</h1>
<hr />

<p>
	<a asp-action="Create" asp-route-categoryId="@Model.CategoryId" class="btn btn-primary">Create New</a>
	<a asp-controller="AdminCategories" asp-action="Index" class="btn btn-primary">Back to Categories</a>

</p>
<input type="hidden" asp-for="CategoryId" />

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Subcategories.First().Title)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Subcategories != null && Model.Subcategories.Any())
		{
			@foreach (var item in Model.Subcategories)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Title)

					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
