@model OnlineShop.Services.Dtos.PromotionDto

@{
	ViewData["Title"] = "Price Offer Form";
}

<h1 class="text-center">Price Offer Form</h1>

@if (Model.Id == 0)
{
	<h4>Create Price Offer</h4>
}
else
{
	<h4>Edit Price Offer</h4>
}
<hr />

<div class="row">
	<div class="col-md-12">
		<form asp-action="SavePromotion">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="PriceOffer" class="control-label"></label>
				<input asp-for="PriceOffer" class="form-control" />
				<span asp-validation-for="PriceOffer" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Message" class="control-label"></label>
				<textarea asp-for="Message" class="form-control"></textarea>
				<span asp-validation-for="Message" class="text-danger"></span>
			</div>

			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="ProductId" />
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary btn-block" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
